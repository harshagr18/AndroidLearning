<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="QUANTITY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/plus_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/quantity_text"
        android:layout_marginLeft="8dp"
        android:onClick="increment"
        android:text="+" />


    <TextView
        android:id="@+id/quantity_no"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />


    <Button
        android:id="@+id/minus_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/plus_button"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/quantity_no"
        android:onClick="decrement"
        android:text="-" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="PRICE"
        android:layout_below="@id/plus_button"
        />

    <TextView
        android:id="@+id/price_no"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0" />

    <Button
        android:id="@+id/order_button"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_no"
        android:layout_marginLeft="8dp"
        android:onClick="submitOrder"
        android:text="ORDER" />


</RelativeLayout>